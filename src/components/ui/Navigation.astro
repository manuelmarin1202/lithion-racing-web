<nav class="navbar" id="navbar">
  <!-- ✅ QUITAMOS el div container del navbar -->
  <div class="nav-container-full">  <!-- Cambiamos la clase -->
    <div class="nav-logo">
      <h2>LITHION RACING</h2>
    </div>
    <ul class="nav-menu" id="nav-menu">
      <li class="nav-item">
        <a href="#hero" class="nav-link active">INICIO</a>
      </li>
      <li class="nav-item">
        <a href="#about" class="nav-link">ACERCA DE</a>
      </li>
      <li class="nav-item">
        <a href="#team" class="nav-link">EQUIPO</a>
      </li>
      <li class="nav-item">
        <a href="#sponsors" class="nav-link">SPONSORS</a>
      </li>
      <li class="nav-item">
        <a href="#contact" class="nav-link">CONTACTO</a>
      </li>
    </ul>
    <div class="hamburger" id="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</nav>

<style>
  /* Navigation */
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: transparent;
    backdrop-filter: blur(0px);
    z-index: 1000;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border-bottom: 1px solid transparent;
  }

  .navbar.scrolled {
    background-color: #1f294c;
    backdrop-filter: blur(20px);
    box-shadow: var(--shadow-lg);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* ✅ NUEVO CONTENEDOR SIN RESTRICCIONES DE ANCHO */
  .nav-container-full {
    width: 100%;
    margin: 0 auto;
    padding: 1rem 4rem; /* Mismo padding que tu container general */
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
  }

  .nav-logo {
    color: var(--white);
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
  }

  .nav-logo h2 {
    color: var(--white);
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    height: 100%;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--white);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--white);
    transition: width 0.3s ease;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    margin: 0;
    padding: 0;
  }

  .bar {
    width: 25px;
    height: 3px;
    background-color: var(--white);
    margin: 3px 0;
    transition: all 0.3s ease;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Mobile styles */
  @media screen and (max-width: 768px) {
    .hamburger {
      display: flex;
    }

    .nav-container-full {
      padding: 1rem 2rem; /* Mismo padding responsive */
    }

    .nav-menu {
      position: fixed;
      left: -100%;
      top: 70px;
      flex-direction: column;
      background-color: rgba(31, 41, 76, 0.98);
      backdrop-filter: blur(20px);
      width: 100%;
      text-align: center;
      transition: all 0.4s ease;
      box-shadow: 0 10px 27px rgba(0, 0, 0, 0.2);
      padding: 2rem 0;
      gap: 1rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      height: calc(100vh - 70px);
      justify-content: flex-start;
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-menu li {
      margin: 1rem 0;
    }

    .nav-link {
      color: rgba(255, 255, 255, 0.9);
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
      font-size: 1.1rem;
      padding: 0.5rem 0;
    }

    .nav-link:hover,
    .nav-link.active {
      color: var(--white);
    }

    .nav-link::after {
      background-color: var(--white);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .hamburger.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .nav-logo h2 {
      font-size: 1.5rem;
    }
  }

  @media screen and (max-width: 480px) {
    .nav-container-full {
      padding: 0.75rem 1rem;
    }

    .nav-logo h2 {
      font-size: 1.3rem;
    }

    .nav-menu {
      gap: 0.5rem;
    }
  }
</style>

<!-- El script se mantiene igual -->
<script>
  // Navigation functionality
  function initNavigation() {
    const hamburger = document.getElementById('hamburger');
    const navMenu = document.getElementById('nav-menu');
    const navLinks = document.querySelectorAll('.nav-link');
    const navbar = document.getElementById('navbar');

    // Mobile menu toggle
    hamburger?.addEventListener('click', function() {
      hamburger.classList.toggle('active');
      navMenu?.classList.toggle('active');
      
      if (navMenu?.classList.contains('active')) {
        document.body.style.overflow = 'hidden';
      } else {
        document.body.style.overflow = '';
      }
    });

    // Close mobile menu when clicking on a link
    navLinks.forEach(link => {
      link.addEventListener('click', function() {
        hamburger?.classList.remove('active');
        navMenu?.classList.remove('active');
        document.body.style.overflow = '';
      });
    });

    // Active link highlighting based on scroll position
    window.addEventListener('scroll', function() {
      let current = '';
      const sections = document.querySelectorAll('section');
      const heroSection = document.getElementById('hero');

      if (window.pageYOffset < (heroSection?.offsetHeight || 400) - 200) {
        navLinks.forEach(link => link.classList.remove('active'));
        return;
      }

      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        if (window.pageYOffset >= (sectionTop - 150)) {
          current = section.getAttribute('id') || '';
        }
      });

      navLinks.forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === `#${current}`) {
          link.classList.add('active');
        }
      });
    });

    // Navbar background change on scroll
    window.addEventListener('scroll', function() {
      if (window.scrollY > 100) {
        navbar?.classList.add('scrolled');
      } else {
        navbar?.classList.remove('scrolled');
      }
    });

    // Cerrar menú móvil al hacer clic fuera
    document.addEventListener('click', function(event) {
      const isClickInsideNav = navbar?.contains(event.target as Node);
      if (!isClickInsideNav && navMenu?.classList.contains('active')) {
        hamburger?.classList.remove('active');
        navMenu?.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initNavigation);
</script>