---
// components/sections/Hero.astro
---

<section id="hero">
  
  <div class="video-wrapper">
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      class="hero-video"
      poster="/images/video-poster.png"
    >
      <source src="/videos/hero-video.mp4" type="video/mp4"> 
      <div class="video-fallback">
        <img src="/images/hero-fallback.jpg" alt="FSAE Team" />
      </div>
    </video>
    
    <div class="video-overlay"></div>
  </div>

  <div class="hero-content">
     </div>

  
  
</section>

<style>
  /* 1. EL CONTENEDOR PRINCIPAL (La caja que ocupa espacio en la web) */
  #hero {
    position: relative; /* Importante: Mantiene el flujo normal */
    width: 100%;
    height: 100vh;      /* Ocupa toda la pantalla */
    height: 100dvh;     /* Mejor soporte móvil */
    overflow: hidden;   /* CORTA lo que sobre del video (el cielo) */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* 2. EL VIDEO (Lo que se estira y se corta) */
  .hero-video {
    position: absolute;
    bottom: 0;          /* Anclado al suelo para salvar subtítulos */
    left: 0;
    width: 100%;
    
    /* Altura extra para que sobre por arriba y se corte */
    height: 120vh;      
    height: 120dvh;
    
    object-fit: cover;
    object-position: center bottom; /* Prioridad a la parte de abajo */
    z-index: 0;
  }

  /* Wrapper para ordenar capas */
  .video-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1; /* Detrás del contenido, delante del fondo base */
    pointer-events: none; /* Permite clicks a través si fuera necesario */
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Gradiente sutil para que se lean las letras blancas */
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 2; /* Encima del video */
  }

  /* 3. CONTENIDO (Texto y botones) */
  .hero-content {
    position: relative;
    z-index: 10; /* Encima de todo */
    text-align: center;
    color: white;
    width: 100%;
    padding: 0 20px;
  }

  /* Frase esquina */
  .video-quote {
    position: absolute;
    bottom: 30px;
    left: 30px;
    color: rgba(255, 255, 255, 0.9);
    font-size: clamp(1rem, 2vw, 1.3rem);
    font-style: italic;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
    z-index: 10;
    max-width: 300px;
    font-weight: 300;
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    opacity: 0.8;
    animation: bounce 2s infinite;
  }

  .arrow {
    width: 2px;
    height: 20px;
    background: white;
    margin: 0 auto;
    position: relative;
  }

  .arrow::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: -4px;
    width: 10px;
    height: 10px;
    border-right: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(45deg);
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .video-quote {
      bottom: 20px;
      left: 20px;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Script de carga optimizada (igual que tenías)
  document.addEventListener('DOMContentLoaded', function() {
    const heroVideo = document.querySelector('.hero-video') as HTMLVideoElement;
    if (heroVideo) {
      heroVideo.addEventListener('loadeddata', function() {
        this.classList.add('loaded');
      });
    }
  });
</script>