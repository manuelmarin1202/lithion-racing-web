    }

    .social-item {
      padding: 1.5rem 1rem;
    }
  }

  @media screen and (max-width: 480px) {
    .social-grid {
      grid-template-columns: 1fr;
    }

    .contact-card {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .contact-arrow {
      display: none;
    }
  }
</style>