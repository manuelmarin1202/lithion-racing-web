<style>
  .contact-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Grid de contacto principal */
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: var(--white);
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid transparent;
    box-shadow: var(--shadow);
  }

  .contact-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-lg);
  }

  .contact-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-color), #034a9a);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .contact-icon img {
    width: 30px;
    height: 30px;
    filter: brightness(0) invert(1);
  }

  .icon-fallback {
    font-size: 1.5rem;
  }

  .contact-text {
    flex: 1;
  }

  .contact-text h4 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .contact-text p {
    color: var(--text-light);
    margin: 0;
    font-size: 0.95rem;
  }

  .contact-arrow {
    color: var(--primary-color);
    font-size: 1.2rem;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .contact-card:hover .contact-arrow {
    transform: translateX(5px);
  }

  /* Secci√≥n de redes sociales */
  .social-section {
    text-align: center;
  }

  .social-section h3 {
    color: var(--primary-color);
    margin-bottom: 2rem;
    font-size: 1.5rem;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .social-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem 1.5rem;
    background: var(--white);
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .social-item:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  .social-item.instagram:hover {
    border-color: #E4405F;
  }

  .social-item.linkedin:hover {
    border-color: #0A66C2;
  }

  .social-item.email:hover {
    border-color: #EA4335;
  }

  .social-item.location:hover {
    border-color: #34A853;
  }

  .social-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-icon img {
    width: 30px;
    height: 30px;
  }

  .social-item span {
    color: var(--text-dark);
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .contact-card {
      padding: 1.5rem;
      gap: 1rem;
    }

    .contact-icon {
      width: 50px;
      height: 50px;
    }

    .contact-icon img {
